<div class="row">
  <div class="col-auto blogUser">
    <h2>Welcome back, {{name}}!</h2>
  </div>
</div>

{{log logged_in}}

<div class="row mt-4">
  <div class="col-md-6 blogContent">
    <h3>Say what's on your mind in the world of TECH!!:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name" class="blogTitle">Blog Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc" class="blogContent">Post:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="pinkBtn">Submit Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3 class="blogTitle">Blog Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a class="editBlogLinks" href="/edit/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="pinkBtn" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
