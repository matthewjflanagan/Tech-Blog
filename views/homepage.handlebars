<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a class="blogTitle" href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p class="blogUser">Posted by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="blogContent">
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
