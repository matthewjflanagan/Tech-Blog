<div class="row">
  <div class="col-md-6 signupLoginTitle">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="signupLoginPrompt">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="signupLoginPrompt">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="pinkBtn" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 signupLoginTitle">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="signupLoginPrompt">Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="signupLoginPrompt">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="signupLoginPrompt">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="pinkBtn" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
